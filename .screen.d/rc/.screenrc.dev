#
# screenrc for development
#

#   Load default rc
source $HOME/.screenrc

#   Override hardstatus
hardstatus string '%{= ck}%101`@%H %= %-w %{kc}[%n %t %f]%{-} %+w %-= %D %d %M %Y %c'

#   Add windows
screen -t vim 1
screen -t git 2
screen -t bash 3
screen -t logs 4
screen -t server 5

#   Start screens at number 1
select 1
